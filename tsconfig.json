{
    "compilerOptions": {
        // Project Structure
        "rootDir": "./src",
        "outDir": "./build",

        // ECMAS Support
        "target": "ES2022",
        "lib": ["ESNext"],
        "module": "NodeNext",
        "moduleResolution": "node",
        "declarationDir": "typings",
        "declaration": true,
        "declarationMap": true,

        // Module Configuration
        "esModuleInterop": true,
        "resolveJsonModule": true,

        // TSC Strictness
        "strict": true,
        "alwaysStrict": true,
        "noUnusedParameters": false,
        "useUnknownInCatchVariables": false // use w/ instanceof
    },

    // Source Control Management
    "exclude": ["build", "*.js", "mjs", "*.cjs", "*.cts"],
    "include": ["src/*", "*.ts", "*.mts", "src/lib/uidynamics-parser.ts"]
}
